{
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "es5",
  "parser": "babel",
  "arrowParens": "always",
  "bracketSpacing": true,
  "tabWidth": 2,
  "overrides": [
    {
      "files": ["*.tsx", "*.ts"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.json", ".prettierrc", ".babelrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.md"],
      "options": {
        "parser": "markdown"
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "parser": "css"
      }
    }
  ]
}
